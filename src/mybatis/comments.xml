<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="comments">
 	<select id="getComments" parameterType="int" resultType="board.vo.Comment">
 	SELECT * FROM review c WHERE review_id = #{review_id}
 	</select>
 	<insert id="insert" parameterType="board.vo.Comment">
 	INSERT INTO review(review_id,member_id,content) 
VALUES (review_seq.nextval,#{member_id},#{content})
 	</insert>
